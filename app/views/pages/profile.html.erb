<div class="row">
    <div class= "col-xs-12">
        <div class="panel panel-default">
         <div class="panel-heading">Command Bar</div>
          <div class="panel-body">
            <%= @username %>
          </div>
        </div>  
    </div>
    <div class= "col-xs-4">
        <div class="panel panel-default">
         <div class="panel-heading">Messages</div>
          <div class="panel-body">
            <p></p>
          </div>
        </div>
    </div>
    <div class= "col-xs-8">
        <div class="panel panel-default">
         <div class= "panel-heading">Project Manager</div>
         <div class= "panel-body">
           <%= render '/components/project_form' %>     
           <% for @p in @projects %>
             <div class= "col-xs-8-2">
              <div class="panel panel-default">
               <div class="panel-body">
               <p><%= @p.description %></p>  
               </div>
              </div>
             </div>
           <% end %>
         </div>
        </div>
    </div>
</div>


